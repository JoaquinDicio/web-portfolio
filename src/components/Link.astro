---
import { undefined } from "astro:schema";

interface Props {
  href: string;
  variant: "blue" | "transparent";
  className?: string;
}

const { href, variant, className } = Astro.props;

const baseStyles =
  "px-4 py-1.5 font-medium rounded border-2 border-[var(--blue)] transition duration-300 ease-in-out";

const variants = {
  blue: "bg-[var(--blue)] text-white hover:shadow-[0_0_8px_var(--blue)]",
  transparent:
    "bg-transparent text-[var(--blue)] hover:text-[var(--blue)] hover:shadow-[0_0_6px_var(--blue)]",
};
---

<a href={href} class={`${baseStyles} ${variants[variant]} ${className}`}>
  <slot />
</a>
